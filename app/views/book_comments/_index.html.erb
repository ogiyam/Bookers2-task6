 <% book.book_comments.each do |book_comment| %>
      <p><%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg", size: "50x50" %>
         <%= link_to book_comment.user.name, user_path(book_comment.user) %></td>
         <%= book_comment.comment %>
      </p>
      <% if book_comment.user == current_user %>
      <div class="comment-delete">
         <p><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class:"btn-sm btn-danger" %></p>
      </div>
      <% end %>
    <% end %>